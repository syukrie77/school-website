---
import MainLayout from "../../layouts/MainLayout.astro";
import { getCollection } from "astro:content";

// WAJIB: getStaticPaths
export async function getStaticPaths() {
  const posts = await getCollection("berita");

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
---

<MainLayout title={post.data.title}>
  <article class="max-w-3xl mx-auto px-6 py-20">
    <h1 class="text-3xl font-bold mb-4">{post.data.title}</h1>

    <p class="text-sm text-gray-500 mb-8">
      {post.data.date.toLocaleDateString("id-ID")}
    </p>

    {post.data.image && (
      <img
        src={post.data.image}
        alt={post.data.title}
        class="w-full rounded-xl mb-8"
      />
    )}

    <div class="prose prose-lg max-w-none">
      <post.Content />
    </div>
  </article>
</MainLayout>
