---
import MainLayout from "../../layouts/MainLayout.astro";
---

<MainLayout title="Kontak | SMK Bina Mandiri Kutabumi">
  <section class="py-24 bg-gray-50">
    <div class="max-w-6xl mx-auto px-6">

      <h1 class="text-4xl font-bold text-gray-800 mb-10">
        Kontak Kami
      </h1>

      <div class="grid md:grid-cols-2 gap-10">
        
        <!-- Informasi -->
        <div class="bg-white rounded-2xl shadow p-8">
          <h2 class="font-semibold text-lg mb-4">Informasi Kontak</h2>
          <p class="text-gray-700 mb-2">
            ğŸ“ Jl. Raya Cadas Kukun KM 2,5 Kutabaru Pasar Kemis - Kab. Tangerang
          </p>
          <p class="text-gray-700 mb-2">
            ğŸ“ 0818 0840 2439
          </p>
          <p class="text-gray-700">
            âœ‰ï¸ smkbimakutabumi[at]gmail.com
          </p>
        </div>

        <!-- Form Netlify -->
        <form
          name="kontak"
          method="POST"
          data-netlify="true"
          netlify-honeypot="bot-field"
          class="bg-white rounded-2xl shadow p-8 space-y-4"
        >
          <!-- WAJIB untuk Netlify -->
          <input type="hidden" name="form-name" value="kontak" />
          <input type="hidden" name="bot-field" />

          <div>
            <label class="block text-sm font-medium mb-1">Nama</label>
            <input
              type="text"
              name="nama"
              required
              class="w-full border rounded-lg px-4 py-2 focus:ring focus:ring-blue-200"
              placeholder="Nama lengkap"
            />
          </div>

          <div>
            <label class="block text-sm font-medium mb-1">Email</label>
            <input
              type="email"
              name="email"
              required
              class="w-full border rounded-lg px-4 py-2 focus:ring focus:ring-blue-200"
              placeholder="email@example.com"
            />
          </div>

          <div>
            <label class="block text-sm font-medium mb-1">Pesan</label>
            <textarea
              name="pesan"
              rows="4"
              required
              class="w-full border rounded-lg px-4 py-2 focus:ring focus:ring-blue-200"
              placeholder="Tulis pesan Anda"
            ></textarea>
          </div>

          <button
            type="submit"
            class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition"
          >
            Kirim Pesan
          </button>
        </form>

      </div>

    </div>
  </section>
</MainLayout>
